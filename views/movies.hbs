<h2 class="h2">Ironhack Cinema</h2>
<p class="p-h2">Click on a movie to show additional information and showtimes schedules!</p>

<div id="movies-container">
    {{#each movies}}
        <div class="movie-card">
            <img src="{{this.image}}"/>
            <h2>{{this.title}}</h2>
            <a href="/{{this._id}}">See More</a>
        </div>
    {{/each}}

</div>